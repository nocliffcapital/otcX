pragma solidity ^0.8.24;

import "forge-std/Script.sol";
import "../src/ProjectRegistry.sol";

contract SeedProjectsScript is Script {
    function run() external {
        uint256 deployerPrivateKey = vm.envUint("PRIVATE_KEY");
        address registryAddress = vm.envAddress("REGISTRY_ADDRESS");
        
        vm.startBroadcast(deployerPrivateKey);
        
        ProjectRegistry registry = ProjectRegistry(registryAddress);
        
        // Add projects if they don't exist
        if (!registry.slugExists("lighter")) {
            registry.addProject(
                "lighter",
                "Lighter",
                0x000000000000000000000000006C696768746572,
                "Points",
                "https://twitter.com/lighter",
                "https://lighter.xyz",
                "Lighter is a decentralized exchange protocol"
            );
            console.log("Added Lighter");
        }
        
        if (!registry.slugExists("extended")) {
            registry.addProject(
                "extended",
                "Extended",
                0x0000000000000000000000657874656e64656400,
                "Points",
                "https://twitter.com/extended",
                "https://extended.finance",
                "Extended is a DeFi lending protocol"
            );
            console.log("Added Extended");
        }
        
        if (!registry.slugExists("pacifica")) {
            registry.addProject(
                "pacifica",
                "Pacifica",
                0x0000000000000000000000007061636966696361,
                "Tokens",
                "https://twitter.com/pacifica",
                "https://pacifica.io",
                "Pacifica is a Layer 2 scaling solution"
            );
            console.log("Added Pacifica");
        }
        
        if (!registry.slugExists("variational")) {
            registry.addProject(
                "variational",
                "Variational",
                0x00000000766172696174696f6e616c00000000,
                "Tokens",
                "https://twitter.com/variational",
                "https://variational.network",
                "Variational is a privacy-focused blockchain"
            );
            console.log("Added Variational");
        }
        
        vm.stopBroadcast();
        
        console.log("\n=== Projects Seeded ===");
        console.log("Registry:", registryAddress);
    }
}
